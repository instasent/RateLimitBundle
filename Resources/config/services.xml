<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="instasent_rate_limit.header_modification_listener.class">Instasent\RateLimitBundle\EventListener\HeaderModificationListener</parameter>
        <parameter key="instasent_rate_limit.rate_limit_annotation_listener.class">Instasent\RateLimitBundle\EventListener\RateLimitAnnotationListener</parameter>
        <parameter key="instasent_rate_limit.rate_limit_service.class">Instasent\RateLimitBundle\Service\RateLimitService</parameter>
        <parameter key="instasent_rate_limit.path_limit_processor.class">Instasent\RateLimitBundle\Util\PathLimitProcessor</parameter>
    </parameters>

    <services>
        <service id="instasent_rate_limit.storage" class="%instasent_rate_limit.storage.class%">
            <argument type="service" id="snc_redis.default_client" />
        </service>

        <service id="instasent_rate_limit.rate_limit_service" class="%instasent_rate_limit.rate_limit_service.class%">
            <argument /> <!-- security.token_storage or security.context for Symfony <2.6 -->
            <call method="setStorage">
                <argument type="service" id="instasent_rate_limit.storage" />
            </call>
        </service>

        <service id="instasent_rate_limit.path_limit_processor" class="%instasent_rate_limit.path_limit_processor.class%">
            <argument>%instasent_rate_limit.path_limits%</argument>
        </service>

        <service id="instasent_rate_limit.rate_limit_annotation_listener" class="%instasent_rate_limit.rate_limit_annotation_listener.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="instasent_rate_limit.rate_limit_service" />
            <argument type="service" id="instasent_rate_limit.path_limit_processor" />

            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="-10" />

            <call method="setParameter">
                <argument>rate_response_code</argument>
                <argument>%instasent_rate_limit.rate_response_code%</argument>
            </call>
            <call method="setParameter">
                <argument>rate_response_message</argument>
                <argument>%instasent_rate_limit.rate_response_message%</argument>
            </call>
            <call method="setParameter">
                <argument>rate_response_exception</argument>
                <argument>%instasent_rate_limit.rate_response_exception%</argument>
            </call>
        </service>

        <service id="instasent_rate_limit.header_modification_listener" class="%instasent_rate_limit.header_modification_listener.class%">
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" priority="0" />

            <call method="setParameter">
                <argument>rate_response_code</argument>
                <argument>%instasent_rate_limit.rate_response_code%</argument>
            </call>
            <call method="setParameter">
                <argument>display_headers</argument>
                <argument>%instasent_rate_limit.display_headers%</argument>
            </call>
            <call method="setParameter">
                <argument>header_limit_name</argument>
                <argument>%instasent_rate_limit.headers.limit.name%</argument>
            </call>
            <call method="setParameter">
                <argument>header_remaining_name</argument>
                <argument>%instasent_rate_limit.headers.remaining.name%</argument>
            </call>
            <call method="setParameter">
                <argument>header_reset_name</argument>
                <argument>%instasent_rate_limit.headers.reset.name%</argument>
            </call>
        </service>

    </services>

</container>
